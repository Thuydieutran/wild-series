{% extends 'base.html.twig' %}
{% block title %} Programs of the category
{% endblock %}

{% block body %}
    {% if programs %}
        <h1 class="my-5">Les séries de la catégorie :
            {{ programs.0.category.name }}</h1>
        {% for program in programs %}
            <div>
                <h2>Série {{ program.id }} : {{ program.title }} </h2>
                <p>{{ program.summary }}</p>
                <a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %}
    {% endif %}

    <a href="{{ path('category_index') }}">
        Retour à la liste des catégories
    </a>

{% endblock %}