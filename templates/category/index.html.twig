{% extends 'base.html.twig' %}


{% block title %}All categories{% endblock %}


{% block body %}

    <h1 class="my-5">Liste de catégories : </h1>
    <ul>
    {% for category in categories %}
        <li>{{ loop.index }} / {{ category.name}}
             <a href="{{ path("category_show", { categoryName: category.name }) }}">Voir les séries</a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}