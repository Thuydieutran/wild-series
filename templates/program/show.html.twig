{# templates/program/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}


{% block body %}


        <div class="row">
			<div class="col-4 mt-5">
				<img class="align-self-start  w-100 mt-5 p-5" src="{{program.poster}}" alt="{{ program.title }} poster">
			</div>
			<div class="col-8 mt-5">

                <h1 class="mt-0">{{ program.title }}</h1>

                <p>{{ program.summary }}</p>

                <p>Catégorie : {{ program.category.name }}</p>
                {% for season in seasons %}
						<a href="{{ path("program_season_show", {programId: program.id, seasonId: season.id}) }}">
							Season
							<span class="fw-bold">{{ season.number }}</span>
						</a>
						<span class="fw-bold">Year:</span>
						{{ season.year }}</p>

					<p>
						<span class="fw-bold">Description:</span>
						{{ season.description }}</p>

				{% else %}
					No serie found in this category :(
				{% endfor %}
	        </div>  
         </div>        
<a href="{{ path('program_index') }}">

    Retour à la liste des programmes

</a>


{% endblock %}